<div class="col-md-3 product-card">
  <div class="product-image">
  <% if product.image? %>
    <%= image_tag(product.image.url) %>
  <% else %>
    <i class="fa fa-4x fa-picture-o" aria-hidden="true"></i>
  <% end %>
  </div>
  <h3><%= link_to product.name, product_path(product) %></h3>
  <h4><%= product.brand %></h4>
  <p><%= product.price %></p>
  <%= rating_for product, "product", disable_after_rate: true, cancel: false %>
</div>