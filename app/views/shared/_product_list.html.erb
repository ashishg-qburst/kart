<table class="table">
  <thead class="thead-inverse">
    <tr>
      <th>#</th>
      <th>Product Name</th>
      <th>Brand</th>
      <th>Price</th>
      <th>Category</th>
    </tr>
  </thead>
  <tbody>
    <% if @products.any? %>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.name %></td>
        <td><%= product.brand %></td>
        <td><%= product.price %></td>
        <td><%= product.category.name %></td>
      </tr>
    <% end %>
    <% end %>
  </tbody></table>