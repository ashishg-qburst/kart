<table class="table sortable">
  <thead class="thead-inverse">
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>email</th>
      <th>Order Count</th>
      <th>Review Count</th>
    </tr>
  </thead>
   <tbody>
    <% if @users.any? %>
    <% @users.each do |user| %>
      
      <tr class="<%= 'info' if user.try(:admin?) %>">
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.orders.count %></td>
        <td><%= user.reviews.count %></td>
      </tr>
      
    <% end %>
    <% end %>
  </tbody>
</table>