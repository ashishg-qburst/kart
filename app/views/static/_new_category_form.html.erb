<div class="col-md-4 add-category-form">
  <h4>Create New Category</h4>
    <%= form_for @new_category do |f| %>
      <div class="form-group">
        <%= label_tag(:name, "Name:") %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <%= f.submit "Add Category", class: "btn btn-primary" %>
    <% end %>
</div>

<div class="col-md-4">
  <p>
      <%= link_to "Create new category and add products >", new_category_path %>
    </p>
    </div>