<div class="container-fluid navbar navbar-inverse">
<header class="container">

    <%= link_to "Kart", root_path, id: "logo", class: "col-md-1" %>

    <div class="col-md-4 search-products-form">
    <div class="form-inline">
      <%= form_tag products_path, method: 'get' do |f| %>
        <div class="form-group">
          <%= text_field_tag :search, params[:query], class: "form-control", id: "search-box" %>
        </div>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
    </div>
    
    </div>

    <nav class="main-nav col-md-6 text-center">
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? && !current_user.try(:admin?) %>
        <li>
          <%= link_to cart_path do%>
            <i class="fa fa-shopping-cart" aria-hidden="true"></i>
            My Cart
            (<span class="cart-count"><%=current_user.cart_count%></span>)
          <%end%>
        </li>
        <% end %>
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Help", '#' %></li>
        <% if user_signed_in? %>
            <li>
              <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>        
            </li>
          <% else %>
            <li>
              <%= link_to('Login', new_user_session_path) %>  
            </li>
        <% end %>
      </ul>
    </nav>
</header>
</div>