<div class="row">
<div class="col-md-4">
<h4>Edit Product</h4>
  <div class="product-image">
    <% if @product.image? %>
      <%= image_tag(@product.image.url) %>
    <% else %>
      <i class="fa fa-4x fa-picture-o" aria-hidden="true"></i>
    <% end %>
  </div>
</div>
<div class="col-md-4 edit-product-form">
    <%= form_for @product, html: { multipart: true } do |f| %>
      <div class="form-group">
        <%= label_tag(:name, "Name:") %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag(:brand, "Brand:") %>
        <%= f.text_field :brand, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag(:price, "Price:") %>
        <%= f.text_field :price, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag(:category_id, "Category:") %>
        <%= collection_select(:categories, :name, @categories, :id, :name, prompt: true,
        selected: @product.category_id) %>
      </div>
      <div class="form-group">
        <%= label_tag(:image, "Choose Product Image:") %>
        <%= f.file_field :image %>
      </div>
      <%= f.submit "Update Product", class: "btn btn-primary" %>
    <% end %>
</div>
</div>