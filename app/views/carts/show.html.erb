<h2>My Cart</h2>
<% if @cart_products.any? %>
<div class="row" id="my-cart">

  <% @cart_products.each do |product| %>

  <div class="col-md-3 cart-product">
  
    <div class="product-image">
    <% if product.image? %>
      <%= image_tag(product.image.url) %>
    <% else %>
      <i class="fa fa-4x fa-picture-o" aria-hidden="true"></i>
    <% end %>
    </div>

    <h3><%= link_to product.name, product_path(product) %></h3>
    <h4><%= product.brand %></h4>
    <p><%= product.price %></p>
    <%=link_to "" , data: { targetUrl: remove_from_cart_path(product) } do%>
    <span class="cart-item">Remove from Cart</span>
    <%end%>
  </div>
  <% end %>

  <div class="col-md-3 checkout-form">
    <%= form_for @order, html: {class: "order_form"} do |f| %>
    <div class="form-group">
      <%= label_tag(:name, "Name:") %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag(:address, "Address:") %>
      <%= f.text_area :address, size: "30X18", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag(:pin, "Pincode:") %><%= f.text_field :pin, class: "form-control" %>
    </div>
    <%= f.submit "Buy Now", class: "btn btn-success" %>
    <% end %>
  </div>
</div>

<% end %>