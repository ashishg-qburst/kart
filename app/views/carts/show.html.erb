<div class="row">
<div class="col-md-6"> 
<% if @cart.items.any? %>
<table class="table">
  <thead class="thead-inverse">
    <tr>
      <th>Product</th>
      <th></th>
      <th>Price (Rs.)</th>
      <th>Quantity</th>
      <th>Total</th>
      <td>
        <%= link_to "Empty Cart", @cart, method: :delete, data: { confirm: "Are you sure?" } %>
      </td>
    </tr>
  </thead>
  <tbody>
  <% @cart.items.each do |item| %>
    <tr>
      <td>
        <% if item.product.attachments.first.present? %>
          <div class="cart-image"><%= image_tag(item.product.attachments.first.image.url) %></div>
        <% else %>
          <i class="fa fa-4x fa-picture-o" aria-hidden="true"></i>
        <% end %>
      </td>
      <td>
        <%= link_to item.product.name, product_path(item.product) %>
      </td>
      <td><%= item.product.price %></td>
      <td><%= item.quantity %></td>
      <td><%= item.total_price %></td>
      <td>
        <%= link_to item, method: :delete,
              data: { confirm: "Are you sure?" } do%>
              <i class="fa fa-trash" aria-hidden="true"></i>
              <% end %>
      </td>
    </tr>
  <% end %>
  <tr>
    <td></td>
    <td></td>
    <td></td>
    <td></td>
    <td colspan="2"><b>Rs. <%= @cart.total_price %></b></td>
  </tr>
  </tbody>
</table>
<% end %>
</div>

<div class="col-md-4 col-md-offset-1 checkout-form">
  <%= form_for @order, html: {class: "order_form"} do |f| %>
  <div class="form-group">
    <%= label_tag(:name, "Name:") %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag(:address, "Address:") %>
    <%= f.text_area :address, size: "30X18", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag(:pin, "Pincode:") %><%= f.text_field :pin, class: "form-control" %>
  </div>
  <%= f.submit "Proceed to Checkout", class: "btn btn-success" %>
  <% end %>
</div>
</div>