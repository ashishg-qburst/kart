<h2>My Cart</h2>
<% if @cart_products.any? %>
<div class="row" id="my-cart">
<div class="col-md-4">
  <% @cart_products.each do |product| %>

  
  <div class="cart-product row">
    <div class="cart-image col-md-4">
    <% if product.image? %>
      <%= image_tag(product.image.url) %>
    <% else %>
      <i class="fa fa-4x fa-picture-o" aria-hidden="true"></i>
    <% end %>
    </div>

    <div class="col-md-8">
    <h4><%= link_to product.name, product_path(product) %></h4>
    <b><%= product.brand %></b>
    <p>Rs. <%= product.price %></p>
    <%=link_to "" , data: { targetUrl: remove_from_cart_path(product) } do%>
    <span class="cart-item">
    <i class="fa fa-minus-square-o" aria-hidden="true"></i>
    </span>
    <%end%>
    </div>
  </div>
   <% end %>
</div>

 


  <div class="col-md-4 checkout-form">
    <%= form_for @order, html: {class: "order_form"} do |f| %>
    <div class="form-group">
      <%= label_tag(:name, "Name:") %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag(:address, "Address:") %>
      <%= f.text_area :address, size: "30X18", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag(:pin, "Pincode:") %><%= f.text_field :pin, class: "form-control" %>
    </div>
    <%= f.submit "Proceed to Checkout", class: "btn btn-success" %>
    <% end %>
  </div>
</div>
<% end %>